---
import siteConfig from '../../../src/config/site.config';

interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<section class="bg-white py-20">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        {headline}
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        {subheadline}
      </p>
      <a href={ctaLink} class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium text-white shadow-lg hover:opacity-90 transition-all" style={`background-color: ${primaryColor};`}>
        {ctaText}
      </a>
    </div>
  </div>
</section>

