---
import siteConfig from '../../../src/config/site.config';

interface Props {
  siteName: string;
  contactEmail: string;
  social?: {
    twitter?: string;
    facebook?: string;
    instagram?: string;
    linkedin?: string;
    github?: string;
  };
  nav: Array<{ label: string; href: string }>;
}

const { siteName, contactEmail, social, nav } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-4">
        <h3 class="text-2xl font-bold">{siteName}</h3>
        <p class="text-gray-400">
          Beautiful landscapes that grow with you.
        </p>
        {social && (
          <div class="flex space-x-4 pt-4">
            {social.twitter && (
              <a href={social.twitter} class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 transition-colors" style={`--hover-color: ${primaryColor};`} onmouseover="this.style.backgroundColor = 'var(--hover-color)'" onmouseout="this.style.backgroundColor = 'rgba(255,255,255,0.1)'">
                Twitter
              </a>
            )}
            {social.facebook && (
              <a href={social.facebook} class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 transition-colors" style={`--hover-color: ${primaryColor};`} onmouseover="this.style.backgroundColor = 'var(--hover-color)'" onmouseout="this.style.backgroundColor = 'rgba(255,255,255,0.1)'">
                Facebook
              </a>
            )}
            {social.instagram && (
              <a href={social.instagram} class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 transition-colors" style={`--hover-color: ${primaryColor};`} onmouseover="this.style.backgroundColor = 'var(--hover-color)'" onmouseout="this.style.backgroundColor = 'rgba(255,255,255,0.1)'">
                Instagram
              </a>
            )}
          </div>
        )}
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6">Navigation</h4>
        <ul class="space-y-3">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6">Get In Touch</h4>
        <p class="text-gray-400 mb-4">
          Have a project in mind? Let's work together!
        </p>
        <a href={`mailto:${contactEmail}`} class="inline-block px-6 py-3 rounded-xl font-semibold text-white shadow-lg hover:opacity-90 transition-all" style={`background-color: ${primaryColor};`}>
          Contact Us
        </a>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8 text-center">
      <p class="text-gray-400">
        &copy; {new Date().getFullYear()} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

