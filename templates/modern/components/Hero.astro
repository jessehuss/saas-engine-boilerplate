---
import siteConfig from '../../../src/config/site.config';

interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<section class="relative bg-gradient-to-br from-primary/10 via-secondary/10 to-primary/5 py-32 overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  
  <div class="container-custom relative">
    <div class="max-w-4xl mx-auto text-center animate-fade-in">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-900 mb-8 leading-tight">
        <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          {headline}
        </span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto">
        {subheadline}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={ctaLink} class="text-lg px-8 py-4 rounded-xl font-semibold text-white hover:opacity-90 shadow-lg" style={`background-color: ${primaryColor};`}>
          {ctaText}
        </a>
        <a href="#services" class="btn-outline text-lg">
          Learn More
        </a>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-gray-50 to-transparent"></div>
</section>

