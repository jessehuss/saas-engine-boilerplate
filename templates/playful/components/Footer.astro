---
import siteConfig from '../../../src/config/site.config';

interface Props {
  siteName: string;
  contactEmail: string;
  social?: {
    twitter?: string;
    facebook?: string;
    instagram?: string;
    linkedin?: string;
    github?: string;
  };
  nav: Array<{ label: string; href: string }>;
}

const { siteName, contactEmail, social, nav } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<footer class="bg-gradient-to-br from-purple-600 via-pink-600 to-blue-600 text-white relative overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
  </div>
  
  <div class="container-custom py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-4">
        <h3 class="text-3xl font-bold">{siteName}</h3>
        <p class="text-white/90">
          Beautiful landscapes that grow with you.
        </p>
        {social && (
          <div class="flex space-x-4 pt-4">
            {social.twitter && (
              <a href={social.twitter} class="w-14 h-14 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 hover:scale-110 transition-all">
                Twitter
              </a>
            )}
            {social.facebook && (
              <a href={social.facebook} class="w-14 h-14 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 hover:scale-110 transition-all">
                Facebook
              </a>
            )}
            {social.instagram && (
              <a href={social.instagram} class="w-14 h-14 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 hover:scale-110 transition-all">
                Instagram
              </a>
            )}
          </div>
        )}
      </div>
      
      <div>
        <h4 class="font-bold text-xl mb-6">Navigation</h4>
        <ul class="space-y-3">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-white/90 hover:text-white hover:translate-x-2 transition-all inline-block">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-bold text-xl mb-6">Get In Touch</h4>
        <p class="text-white/90 mb-4">
          Have a project? Let's chat!
        </p>
        <a href={`mailto:${contactEmail}`} class="inline-block px-8 py-4 rounded-full font-bold text-white shadow-2xl hover:scale-110 hover:rotate-3 transition-all bg-white/20 backdrop-blur-sm">
          Contact Us
        </a>
      </div>
    </div>
    
    <div class="border-t border-white/30 mt-12 pt-8 text-center">
      <p class="text-white/80">
        &copy; {new Date().getFullYear()} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

