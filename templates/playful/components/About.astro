---
import siteConfig from '../../../src/config/site.config';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<section class="py-32 bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 relative overflow-hidden">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-6">
        <h2 class="text-5xl md:text-6xl font-bold leading-tight" style={`color: ${primaryColor};`}>
          {title}
        </h2>
        <p class="text-xl text-gray-700 leading-relaxed font-medium">
          {description}
        </p>
        <div class="flex gap-4 pt-4">
          <a href="/contact" class="px-10 py-5 rounded-full font-bold text-white shadow-primary hover:scale-110 hover:rotate-3 transition-all" style={`background-color: ${primaryColor};`}>
            Get Started
          </a>
          <a href="#services" class="px-10 py-5 rounded-full font-bold text-gray-700 bg-white border-4 border-primary hover:scale-110 hover:-rotate-3 transition-all shadow-lg">
            Our Services
          </a>
        </div>
      </div>
      
      {image && (
        <div class="order-first lg:order-last">
          <div class="rounded-3xl p-6 bg-white shadow-2xl hover:rotate-3 transition-transform">
            <img 
              src={image} 
              alt={title} 
              class="w-full h-auto rounded-2xl"
            />
          </div>
        </div>
      )}
    </div>
  </div>
</section>

