---
import siteConfig from '../../../src/config/site.config';

interface Props {
  nav: Array<{ label: string; href: string }>;
  logo: string;
  siteName: string;
}

const { nav, logo, siteName } = Astro.props;
const primaryColor = siteConfig.primaryColor;
const secondaryColor = siteConfig.secondaryColor;
---

<header class="bg-white/80 backdrop-blur-sm sticky top-0 z-50 border-b-4 border-primary shadow-lg">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <a href="/" class="flex items-center space-x-3 group">
        <img src={logo} alt={siteName} class="h-12 w-auto transition-transform duration-300 group-hover:rotate-6 group-hover:scale-110" />
        <span class="text-3xl font-bold" style={`color: ${primaryColor};`}>
          {siteName}
        </span>
      </a>
      
      <div class="hidden md:flex items-center space-x-2">
        {nav.map((item) => (
          <a 
            href={item.href} 
            class="px-5 py-2 rounded-full font-semibold text-gray-700 hover:scale-110 transition-all hover:shadow-lg"
          >
            {item.label}
          </a>
        ))}
        <a href="/contact" class="ml-4 px-6 py-3 rounded-full font-bold text-white shadow-primary hover:scale-110 hover:rotate-2 transition-all" style={`background-color: ${primaryColor};`}>
          Get In Touch
        </a>
      </div>
      
      <button class="md:hidden text-gray-700 hover:rotate-12 transition-transform p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
</header>

