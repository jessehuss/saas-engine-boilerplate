---
import siteConfig from '../../../src/config/site.config';

interface Props {
  nav: Array<{ label: string; href: string }>;
  logo: string;
  siteName: string;
}

const { nav, logo, siteName } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<header class="bg-slate-950/90 backdrop-blur-md border-b-2 sticky top-0 z-50" style={`border-color: ${primaryColor}; box-shadow: 0 0 10px rgba(14, 165, 233, 0.5);`}>
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <a href="/" class="flex items-center space-x-3 group">
        <img src={logo} alt={siteName} class="h-10 w-auto transition-transform duration-300 group-hover:scale-105" />
        <span class="text-2xl font-bold text-white" style="font-family: 'JetBrains Mono', monospace;">
          &lt;{siteName}/&gt;
        </span>
      </a>
      
      <div class="hidden md:flex items-center space-x-1">
        {nav.map((item) => (
          <a 
            href={item.href} 
            class="px-4 py-2 text-gray-300 hover:text-primary font-medium transition-all duration-200"
            style="font-family: 'JetBrains Mono', monospace;"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <button id="mobile-menu-button" class="md:hidden text-gray-300 hover:text-primary p-2" aria-label="Toggle mobile menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        {nav.map((item) => (
          <a 
            href={item.href} 
            class="px-4 py-2 text-gray-300 hover:text-primary font-medium transition-all duration-200"
            style="font-family: 'JetBrains Mono', monospace;"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
