---
import siteConfig from '../../../src/config/site.config';

interface Props {
  siteName: string;
  contactEmail: string;
  social?: {
    twitter?: string;
    facebook?: string;
    instagram?: string;
    linkedin?: string;
    github?: string;
  };
  nav: Array<{ label: string; href: string }>;
}

const { siteName, contactEmail, social, nav } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<footer class="bg-slate-900 border-t border-slate-800 text-slate-400">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-4">
        <h3 class="text-2xl font-bold text-white">{siteName}</h3>
        <p class="text-slate-500">
          Beautiful landscapes that grow with you.
        </p>
        {social && (
          <div class="flex space-x-4 pt-4">
            {social.twitter && (
              <a href={social.twitter} class="w-12 h-12 flex items-center justify-center rounded-full bg-slate-800 hover:bg-slate-700 border border-slate-700 transition-colors">
                Twitter
              </a>
            )}
            {social.facebook && (
              <a href={social.facebook} class="w-12 h-12 flex items-center justify-center rounded-full bg-slate-800 hover:bg-slate-700 border border-slate-700 transition-colors">
                Facebook
              </a>
            )}
            {social.instagram && (
              <a href={social.instagram} class="w-12 h-12 flex items-center justify-center rounded-full bg-slate-800 hover:bg-slate-700 border border-slate-700 transition-colors">
                Instagram
              </a>
            )}
          </div>
        )}
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6 text-white">Navigation</h4>
        <ul class="space-y-3">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-slate-500 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6 text-white">Get In Touch</h4>
        <p class="text-slate-500 mb-4">
          Have a project in mind? Let's work together!
        </p>
        <a href={`mailto:${contactEmail}`} class="inline-block px-6 py-3 rounded-lg font-semibold text-slate-950 hover:scale-105 transition-all glow-box-subtle" style={`background-color: ${primaryColor};`}>
          Contact Us
        </a>
      </div>
    </div>
    
    <div class="border-t border-slate-800 mt-12 pt-8 text-center">
      <p class="text-slate-600">
        &copy; {new Date().getFullYear()} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

