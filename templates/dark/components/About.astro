---
import siteConfig from '../../../src/config/site.config';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const primaryColor = siteConfig.primaryColor;
---

<section class="py-32 bg-slate-950">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-6">
        <h2 class="text-4xl md:text-5xl font-extrabold leading-tight text-white">
          <span style={`color: ${primaryColor};`} class="text-glow-sm">
            {title}
          </span>
        </h2>
        <p class="text-lg text-slate-400 leading-relaxed">
          {description}
        </p>
        <div class="flex gap-4 pt-4">
          <a href="/contact" class="px-8 py-4 rounded-lg font-bold text-slate-950 hover:scale-110 transition-all glow-box-subtle" style={`background-color: ${primaryColor};`}>
            Get Started
          </a>
          <a href="#services" class="px-8 py-4 rounded-lg font-bold text-white border-2 border-slate-700 hover:border-primary hover:text-glow transition-all">
            Our Services
          </a>
        </div>
      </div>
      
      {image && (
        <div class="order-first lg:order-last">
          <div class="bg-slate-800 rounded-3xl p-6 border border-slate-700">
            <img 
              src={image} 
              alt={title} 
              class="w-full h-auto rounded-2xl"
            />
          </div>
        </div>
      )}
    </div>
  </div>
</section>

