---
import siteConfig from '../../../src/config/site.config';

interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
const primaryColor = siteConfig.primaryColor;
const secondaryColor = siteConfig.secondaryColor;
const accentColor = siteConfig.accentColor || siteConfig.secondaryColor;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-primary via-secondary to-accent" style={`background: linear-gradient(135deg, ${primaryColor}, ${secondaryColor}, ${accentColor});`}>
  <!-- Floating gradient orbs -->
  <div class="absolute top-20 left-10 w-96 h-96 rounded-full opacity-20 blur-3xl" style={`background: radial-gradient(circle, ${primaryColor}, transparent);`}></div>
  <div class="absolute top-40 right-10 w-96 h-96 rounded-full opacity-20 blur-3xl" style={`background: radial-gradient(circle, ${secondaryColor}, transparent); animation-delay: 2s;`}></div>
  <div class="absolute -bottom-8 left-1/2 w-96 h-96 rounded-full opacity-20 blur-3xl" style={`background: radial-gradient(circle, ${accentColor}, transparent); animation-delay: 4s;`}></div>
  
  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center slide-up">
      <h1 class="text-6xl md:text-7xl lg:text-8xl font-extrabold mb-8 leading-tight text-white">
        {headline}
      </h1>
      <p class="text-xl md:text-2xl text-white/90 mb-12 max-w-2xl mx-auto">
        {subheadline}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={ctaLink} class="text-lg px-10 py-5 rounded-2xl font-bold text-white shadow-2xl hover:scale-110 transition-all hover:shadow-3xl" style={`background-color: ${primaryColor};`}>
          {ctaText}
        </a>
        <a href="#services" class="text-lg px-10 py-5 rounded-2xl font-bold text-white border-2 border-white/40 hover:scale-110 transition-all glass backdrop-blur-md">
          Learn More
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

