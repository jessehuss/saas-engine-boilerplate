---
import siteConfig from '../../../src/config/site.config';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const primaryColor = siteConfig.primaryColor;
const secondaryColor = siteConfig.secondaryColor;
---

<section class="py-32 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-6">
        <h2 class="text-5xl md:text-6xl font-extrabold leading-tight" style={`background: linear-gradient(135deg, ${primaryColor}, ${secondaryColor}); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;`}>
          {title}
        </h2>
        <p class="text-lg text-gray-700 leading-relaxed">
          {description}
        </p>
        <div class="flex gap-4 pt-4">
          <a href="/contact" class="px-8 py-4 rounded-2xl font-bold text-white shadow-2xl hover:scale-110 transition-all" style={`background-color: ${primaryColor};`}>
            Get Started
          </a>
          <a href="#services" class="px-8 py-4 rounded-2xl font-bold bg-white border-2 border-gray-300 hover:scale-110 transition-all shadow-lg">
            Our Services
          </a>
        </div>
      </div>
      
      {image && (
        <div class="order-first lg:order-last float">
          <div class="glass-strong rounded-3xl overflow-hidden p-8">
            <img 
              src={image} 
              alt={title} 
              class="w-full h-auto rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      )}
    </div>
  </div>
</section>

