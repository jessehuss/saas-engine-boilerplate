---
import siteConfig from '../../../src/config/site.config';

interface Props {
  siteName: string;
  contactEmail: string;
  social?: {
    twitter?: string;
    facebook?: string;
    instagram?: string;
    linkedin?: string;
    github?: string;
  };
  nav: Array<{ label: string; href: string }>;
}

const { siteName, contactEmail, social, nav } = Astro.props;
const primaryColor = siteConfig.primaryColor;
const secondaryColor = siteConfig.secondaryColor;
---

<footer class="bg-gradient-to-br from-primary via-secondary to-accent text-white relative overflow-hidden" style={`background: linear-gradient(135deg, ${primaryColor}, ${secondaryColor});`}>
  <div class="absolute inset-0 opacity-10">
    <div class="absolute -top-40 -right-40 w-96 h-96 rounded-full blur-3xl bg-white"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 rounded-full blur-3xl bg-white"></div>
  </div>
  
  <div class="container-custom py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-4">
        <h3 class="text-2xl font-bold">{siteName}</h3>
        <p class="text-white/80">
          Beautiful landscapes that grow with you.
        </p>
        {social && (
          <div class="flex space-x-4 pt-4">
            {social.twitter && (
              <a href={social.twitter} class="w-12 h-12 flex items-center justify-center rounded-full glass hover:scale-110 transition-transform">
                Twitter
              </a>
            )}
            {social.facebook && (
              <a href={social.facebook} class="w-12 h-12 flex items-center justify-center rounded-full glass hover:scale-110 transition-transform">
                Facebook
              </a>
            )}
            {social.instagram && (
              <a href={social.instagram} class="w-12 h-12 flex items-center justify-center rounded-full glass hover:scale-110 transition-transform">
                Instagram
              </a>
            )}
          </div>
        )}
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6">Navigation</h4>
        <ul class="space-y-3">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-white/80 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-bold text-lg mb-6">Get In Touch</h4>
        <p class="text-white/80 mb-4">
          Have a project in mind? Let's work together!
        </p>
        <a href={`mailto:${contactEmail}`} class="inline-block px-8 py-4 rounded-xl font-semibold text-white shadow-lg hover:scale-105 transition-all backdrop-blur-md bg-white/20 border border-white/30">
          Contact Us
        </a>
      </div>
    </div>
    
    <div class="border-t border-white/20 mt-12 pt-8 text-center">
      <p class="text-white/60">
        &copy; {new Date().getFullYear()} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

