---
import type { SiteConfig } from '../../../src/config/site.config';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../../../src/components/SEO.astro';
import '../../../src/styles/global.css';
import '../styles/portfolio.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  siteConfig: SiteConfig;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  keywords?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { title, description, image, siteConfig, type, publishedTime, modifiedTime, author, tags, keywords, noindex, nofollow } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO 
      title={title || siteConfig.siteName}
      description={description || siteConfig.tagline || ''}
      image={image}
      siteConfig={siteConfig}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      tags={tags}
      keywords={keywords}
      noindex={noindex}
      nofollow={nofollow}
    />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800;900&family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />
    
    <style>
      :root {
        --primary-color: {siteConfig.primaryColor};
        --secondary-color: {siteConfig.secondaryColor};
        --accent-color: {siteConfig.accentColor || siteConfig.secondaryColor};
        --neutral-color: #64748B;
      }
    </style>
  </head>
  <body>
    <Header nav={siteConfig.nav} logo={siteConfig.logo} siteName={siteConfig.siteName} />
    <slot />
    <Footer 
      siteName={siteConfig.siteName}
      contactEmail={siteConfig.contactEmail}
      social={siteConfig.social}
      nav={siteConfig.nav}
    />
  </body>
</html>

