---
import siteConfig from '../../../src/config/site.config';

interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
const primaryColor = siteConfig.primaryColor;
const accentColor = siteConfig.accentColor || siteConfig.secondaryColor;
---

<section class="relative py-24 bg-gradient-to-br from-gray-50 to-white">
  <div class="absolute inset-0 overflow-hidden opacity-5">
    <div class="absolute top-20 right-20 w-96 h-96 rounded-full" style={`background: radial-gradient(circle, ${primaryColor}, transparent);`}></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 rounded-full" style={`background: radial-gradient(circle, ${accentColor}, transparent);`}></div>
  </div>
  
  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center fade-in">
      <div class="inline-block px-4 py-2 rounded-full text-sm font-semibold mb-6" style={`background-color: ${primaryColor}; color: white;`}>
        Trusted Excellence
      </div>
      
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight text-gray-900" style={`font-family: 'Playfair Display', serif;`}>
        {headline}
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-600 mb-10 max-w-2xl mx-auto" style={`font-family: 'Source Sans Pro', sans-serif;`}>
        {subheadline}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={ctaLink} class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold text-white shadow-professional-lg hover-lift transition-all" style={`background-color: ${primaryColor};`}>
          {ctaText}
        </a>
        <a href="#services" class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold border-2 hover-lift transition-all" style={`border-color: ${primaryColor}; color: ${primaryColor};`}>
          Our Services
        </a>
      </div>
      
      <div class="mt-16 pt-8 border-t border-gray-200">
        <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <span class="font-semibold">âœ“ Certified</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold">15+ Years</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold">100% Satisfaction</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
