---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<section class="py-24">
  <div class="container-custom">
    <div class="max-w-3xl">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">{title}</h2>
      <div class="prose prose-lg max-w-none text-gray-600 leading-relaxed space-y-4">
        <p>{description}</p>
      </div>
      {image && (
        <div class="mt-12">
          <img 
            src={image} 
            alt={title} 
            class="w-full h-auto"
          />
        </div>
      )}
    </div>
  </div>
</section>

