---
interface Service {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  services: Service[];
}

const { services } = Astro.props;
---

<section id="services" class="py-24">
  <div class="container-custom">
    <div class="mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Services</h2>
    </div>
    
    <div class="space-y-8">
      {services.map((service) => (
        <div class="border-b border-gray-200 pb-8 last:border-0">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              {service.icon && (
                <span class="text-3xl mb-4 block">{service.icon}</span>
              )}
              <h3 class="text-2xl font-bold text-gray-900 mb-3">{service.title}</h3>
              <p class="text-gray-600 leading-relaxed max-w-2xl">{service.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

