---
import { loadLayout } from '../lib/templateLoader';
import siteConfig from '../config/site.config';
import ContactForm from '../components/ContactForm.astro';

const BaseLayout = await loadLayout('BaseLayout');
const primaryColor = siteConfig.primaryColor;
const template = siteConfig.template;
---

<BaseLayout siteConfig={siteConfig} title="Contact Us" description="Get in touch with us">
  <section class={`py-32 ${template === 'dark' ? 'bg-slate-950' : template === 'gradient' ? 'bg-gradient-to-br from-gray-50 via-white to-gray-100' : template === 'playful' ? 'bg-gradient-to-br from-pink-50 via-purple-50 to-blue-50' : 'bg-gray-50'}`}>
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-16">
          <h1 class={`text-5xl md:text-6xl font-bold mb-6 ${template === 'dark' ? 'text-white' : 'text-gray-900'}`} style={`color: ${primaryColor};`}>Get In Touch</h1>
          <p class={`text-xl ${template === 'dark' ? 'text-slate-400' : 'text-gray-600'}`}>
            Have a project in mind? We'd love to hear from you.
          </p>
        </div>
        
        <div class={`rounded-2xl shadow-xl p-8 md:p-12 ${template === 'dark' ? 'bg-slate-800' : template === 'gradient' ? 'bg-white/80 backdrop-blur-md border border-gray-200' : 'bg-white'}`}>
          <ContactForm />
        </div>
        
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class={`p-6 rounded-lg ${template === 'dark' ? 'bg-slate-800' : template === 'gradient' ? 'bg-white/80 backdrop-blur-md border border-gray-200' : 'bg-gray-50'}`}>
            <h3 class={`font-bold text-lg mb-2 ${template === 'dark' ? 'text-white' : 'text-gray-900'}`}>Email</h3>
            <a href={`mailto:${siteConfig.contactEmail}`} class="hover:underline transition-colors" style={`color: ${primaryColor};`}>
              {siteConfig.contactEmail}
            </a>
          </div>
          
          <div class={`p-6 rounded-lg ${template === 'dark' ? 'bg-slate-800' : template === 'gradient' ? 'bg-white/80 backdrop-blur-md border border-gray-200' : 'bg-gray-50'}`}>
            <h3 class={`font-bold text-lg mb-2 ${template === 'dark' ? 'text-white' : 'text-gray-900'}`}>Business Hours</h3>
            <p class={template === 'dark' ? 'text-slate-400' : 'text-gray-600'}>Monday - Friday: 9am - 6pm</p>
            <p class={template === 'dark' ? 'text-slate-400' : 'text-gray-600'}>Saturday: 10am - 4pm</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

